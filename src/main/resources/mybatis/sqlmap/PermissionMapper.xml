<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.fql.fishbone.dao.mapper.PermissionMapper">
    <resultMap id="permissionMap" type="cn.fql.fishbone.model.domain.Permission">
        <result column="id" property="id"/>
        <result column="permissionname" property="permissionname"/>
    </resultMap>

    <sql id="selectAllColumns">
        id,permissionname
    </sql>

    <sql id="setAllColumns">
        <set>
            <if test="id != null">id = #{id},</if>
            <if test="username != null">permissionname = #{permissionname},</if>
        </set>
    </sql>

    <sql id="queryConditions">
        <if test="id != null">and id = #{id}</if>
        <if test="username != null">and permissionname = #{permissionname}</if>
    </sql>

</mapper>